{
  "name": "bidhub",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/app.css --minify",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "pnpm run db:generate",
    "lint": "eslint \"app/**/*.{ts,tsx}\"",
    "typecheck": "tsc -b",
    "test": "jest .",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
